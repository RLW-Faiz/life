/* pages/myNews/myNews.wxss */
page{
  background-color: white;
}
.tab{
  display: flex;
  justify-content: center;
}
.tab_item{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 210rpx;
  height: 90rpx;
  font-size: 28rpx;
}
.tab_border{
  position: relative;
}
.tab_border::after{
  position: absolute;
  top: 90rpx;
  width: 100%;
  height: 5rpx;
  background-color: #b0b0b0;
  content: '';
  animation: move .5s ease-in;
}
.news_item{
  position: relative;
  padding: 30rpx 10rpx;
  border-bottom: 1rpx solid #b0b0b0;
  box-sizing: border-box;
}
.news_head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.news_title{
  width: 480rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #949494;
}
.news_data{
  font-size: 20rpx;
  color: #b0b0b0;
}
.news_reply{
  width: 480rpx;
  font-size: 26rpx;
  color: #b0b0b0;
}
.opeation{
  position: absolute;
  right: 10rpx;
  top: 85rpx;
  width: 60rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  border-radius: 18rpx;
  font-size: 20rpx;
}
.isRead{
  color: white;
  background-color: #838383;
}
.noRead{
  color: white;
  background-color: #f95454;
}