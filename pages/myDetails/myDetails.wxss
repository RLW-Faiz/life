/* pages/myDetails/myDetails.wxss */
page{
  background-color: #ebebeb;
}
.all_icon{
  width: 30rpx;
  height: 30rpx;
  background-color: black;
}
.user_head{
  background-color: white;
}
.user_info{
  padding: 30rpx 70rpx 15rpx 70rpx;
  display: flex;
  font-size: 28rpx;
  box-sizing: border-box;
}
.user_img{
  margin-right: 25rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 65rpx;
  background-color: red;
}
.user_people{
  display: flex;
  font-weight: 700;
  height: 50rpx;
  line-height: 50rpx;
}

.updata_btn{
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 380rpx;
  height: 90rpx;
  border-radius: 10rpx;
  background-color: red;
}

.user_tabbar_list{
  display: flex;
  justify-content: center;
}
.user_tabbar{
  position: relative;
  padding: 60rpx 20rpx 30rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_tabbar_icon{
  margin-right: 10rpx;
}
.user_tabbar_selected::after{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 5rpx;
  background-color: blueviolet;
  animation: move .5s ease-in;
  content: '';
}


.body{
  padding: 30rpx;
}
.content_ite{
  position: absolute;
  top: 0;
  right: 0;
  padding: 5rpx 10rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 0 10rpx 0 0;
  color: white;
  background-color: #1dc2c2;
}
.content_item{
  position: relative;
  margin-bottom: 30rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  background-color: white;
}
.content_tilte{
  font-size: 34rpx;
  font-weight: 800;
}
.content{
  margin-top: 30rpx;
  display: flex;
}
.content_img{
  margin-right: 25rpx;
  width: 350rpx;
  height: 150rpx;
  background-color: green;
}
.content_text{
  padding-right: 30rpx;
  font-size: 27rpx;
}
.content_area{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #a8a7a7;
}
.all_icon_small{
  width: 20rpx;
  height: 20rpx;
  background-color: red;
}
.content_opeation_area{
  display: flex;
  justify-content: space-between;
}
.content_opeation{
  padding-left: 10rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.content_data{
  margin-right: 20rpx;
}

.content_title{
  font-size: 34rpx;
  font-weight: 800;
}
.content_text_two{
  padding-top: 40rpx;
  width: 100%;
  height: 100rpx;
  line-height: 50rpx;
  overflow: hidden;
  font-size: 28rpx;
}
.content_text_th{
  padding-top: 40rpx;
  width: 100%;
  height: 100rpx;
  line-height: 50rpx;
  overflow: hidden;
  font-size: 30rpx;
}
.content_date{
  text-align: right;
  font-size: 26rpx;
  color: #d3d0d0;
}