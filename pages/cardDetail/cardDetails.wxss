/* pages/cardDetail/cardDetails.wxss */
@import "/pages/modal/modal.wxss";
.body_card{
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
}
.join{
  margin-top: 30rpx;
  margin-bottom: 50rpx;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  border-radius: 10rpx;
  border: 1rpx solid #b0b0b0;
  background-color: white;
  box-shadow: 0 0 5rpx 5rpx #e6d7d7;
}
.join_bnt{
  width: 350rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 34rpx;
  color: white;
  font-weight: 800;
  border-radius: 8rpx;
  border: 1rpx solid #b0b0b0;
  background-color: green;
}
.thank{
  margin-top: 30rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  border: 2rpx solid #b0b0b0;
  box-sizing: border-box;
}
.record{
  margin-bottom: 25rpx;
  padding-bottom: 25rpx;
}
.record_item{
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1rpx solid #b0b0b0;
}
.record_user{
  display: flex;
  margin-top: 40rpx;
}
.record_content{
  margin-top: 20rpx;
  margin-left: 110rpx;
  height: 100rpx;
}
.record_icon{
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}