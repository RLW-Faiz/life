/* pages/applyPlate/applyPlate.wxss */
.apply_plate{
  width: 100%;
  /* height: 130vh; */
  background-color: white;
}
.placeholder_input{
  text-align: center;
  color: #333;
  font-weight: 800;
}
.title_input{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #b0b0b0;
}
.set_content{
  padding: 30rpx;
  width: 100%;
  height: 45vh;
  font-size: 28rpx;
  box-sizing: border-box;
}
.content_num{
  padding-right: 45rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  font-size: 26rpx;
  color: #b0b0b0;
  border-bottom: 1rpx solid #b0b0b0;
  box-sizing: border-box;
}
.content_opeation_text{
  padding: 40rpx 70rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}
.img_text{
  font-size: 36rpx;
  color: #8a8989;
}
.img_num{
  font-size: 28rpx;
  color: #6b6b6b;
}
.issue_btn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  font-weight: 800;
  font-size: 38rpx;
  background-color: white;
  color: #dddcdc;
  z-index: 1;
}
