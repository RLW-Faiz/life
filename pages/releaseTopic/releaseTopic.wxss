/* pages/releaseTopic/releaseTopic.wxss */
.topic{
  background-color: white;
}
.topic_name{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  width: 100%;
  height: 4vh;
  line-height: 4vh;
  text-align: center;
  border-bottom: 1rpx solid #b0b0b0;
} 
.topic_name_placeholder{
  color: black;
  font-size: 32rpx;
  font-weight: 800;
}
.topic_content{
  padding-top: 40rpx;
  width: 100%;
  height: 80vh;
  font-size: 28rpx;
}
.topic_num{
  font-size: 24rpx;
  color: #b0b0b0;
  text-align: right;
}
.share_btn{
  display: flex;
  justify-content: center;
}
.share{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 15rpx 130rpx;
  border-radius: 10rpx;
  color: white;
  border: 1rpx solid black;
  background-color: rgb(102, 102, 250);
}