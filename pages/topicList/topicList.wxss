/* pages/topicList/topicList.wxss */
.search{
  width: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
}
.search_list{
  padding-left: 80rpx;
  padding-right: 80rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}
.search_item_icon{
  width: 35rpx;
  height: 35rpx;
  background-color: green;
}
.search_item_icon_selected{
  width: 50rpx;
  height: 50rpx;
  background-color: green;
  animation: beBig .5s ease-in;
}

.search_item{
  position: relative;
  padding: 50rpx 15rpx 20rpx 15rpx;
  display: flex;
  align-items: flex-end;
  font-size: 28rpx;
  box-sizing: border-box;
}
.search_title::after{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: black;
  content: '';
  animation: move .5s ease-in;
}
.result_change{
  margin-bottom: 20rpx;
  margin-right: 30rpx;
  font-size: 26rpx;
  color: #b0b0b0;
  text-align: right;
}
.result_list{
  border-top: 1rpx solid #b0b0b0;
}
.result_item{
  display: flex;
  align-items: center;
  color: #b0b0b0;
  height: 100rpx;
  border-bottom: 1rpx solid #b0b0b0;
}

.all_result_img{
  margin-left: 10rpx;
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: white;
  text-align: center;
  border-radius: 25rpx;
}
.result_icon{
  margin-left: 10rpx;
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background-color: red;
}
.result_see{
  margin-left: 105rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: green;
}
.result_see_num{
  margin-right: 105rpx;
}
@keyframes beBig{
  0% {
    width: 35rpx;
    height: 35rpx;
  }
  100%{
    width: 50rpx;
    height: 50rpx;
  }
}
@keyframes move{
  0% {
    width: 20%;
  }
  100%{
    width: 100%;
  }
}