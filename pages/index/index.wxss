/**index.wxss**/
.index{
  padding: 20rpx 30rpx 200rpx 30rpx;
  box-sizing: border-box;
}
.hot_topic{
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-radius: 10rpx;
  border: 1rpx solid #b0b0b0;
  background-color: white;
  box-shadow: 0 0 5rpx 5rpx #e6d7d7;
  box-sizing: border-box;
}
.hot_head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}
.hot_title{
  display: flex;
  align-items: flex-end;
}
.hot_title_border{
  margin-right: 15rpx;
  width: 7rpx;
  height: 28rpx;
  background-color: greenyellow;
}
.hot_title_text{
  font-weight: 800;
}
.hot_more{
  font-size: 27rpx;
}
.hot_topic_body{
  display: flex;
  align-items: center;
  height: 80rpx;
  justify-content: space-between;
}
.hot_topic_body_details{
  font-size: 44rpx;
}
.hot_btn{
  display: flex;
  justify-content: center;
}
.hot_issue_btn{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 15rpx 120rpx;
  border-radius: 10rpx;
  border: 1rpx solid #b0b0b0;
  background-color: white;
  box-shadow: 0 0 5rpx 5rpx #e6d7d7;
}
.hot{
  margin-top: 100rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-radius: 10rpx;
  border: 1rpx solid #b0b0b0;
  background-color: white;
  box-shadow: 0 0 5rpx 5rpx #e6d7d7;
  box-sizing: border-box;
}
.hot_issue_item{
  display: flex;
  align-items: center;
}
.hot_issue_img{
  display: block;
  width: 150rpx;
  height: 150rpx;
  background-color: green;
}
.hot_issue_text{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 35rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 150rpx;
}
.modal{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  height: 230%;
  background-color: rgba(0, 0, 0, .5);
  z-index: 12;
}
.go_login{
  position: absolute;
  top:50%;
  left:50%;
  width: 500rpx;
  height: 300rpx;
  border-radius: 10rpx;
  border: 1rpx solid #b0b0b0;
  box-shadow: 0 0 5rpx 7rpx #dddddd;
  background-color: white;
  transform:translate(-50%,-50%);
  animation: up 1s ease-in;
  z-index: 13;
}
.go_login_title{
  margin-top: 40rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 40rpx;
}
.btn_area{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.go_login_btn{
  display: flex;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}
@keyframes up{
  0%{
    top: 0%
  }
  100%{
    top: 50%;
  }
}