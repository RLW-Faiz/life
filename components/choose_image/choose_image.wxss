/* components/choose_image/choose_image.wxss */
.choose_image{
  padding: 0 70rpx 69rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
}
.image_item{
  position: relative;
  margin-bottom: 80rpx;
  width: 250rpx;
  height: 200rpx;
  background: blue;
}
.get_image{
  width: inherit;
  height: inherit;
}
.delete{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: red;
  font-weight: 800;
}
.delete_hover{
  border-radius: 25rpx;
  background: rgba(0, 0, 0, .5);
  color: blue;
}

